FROM node:lts-buster
ARG BRANCH=master
RUN apt-get update && \
    apt-get install -y awscli
RUN cd /usr/local/src/ \
  && git clone https://github.com/trendscenter/coinstac.git \
  && cd coinstac \
  && git checkout $BRANCH \
  && npm i && npm run build

  #Set working directory
  WORKDIR /usr/local/src/coinstac
